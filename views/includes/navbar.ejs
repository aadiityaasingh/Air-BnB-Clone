<style>
  .btn-search {
    background-color: #ff385c;
    color: white;
    border: none;
    border-radius: 999px;
    padding: 0.6rem 1.2rem;
    font-weight: 600;
    font-size: 1rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
    box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.2);
    transition: all 0.2s ease-in-out;
  }
  .btn-search:hover {
    background-color: #e03150;
    transform: scale(1.05);
  }
  .btn-search i {
    display: inline;
    margin-right: 0.5rem;
  }

  .search-bar {
    background: #fff;
    border-radius: 999px;
    padding: 0.3rem 0.6rem;
    box-shadow: 0px 2px 8px rgba(0, 0, 0, 0.1);
    max-width: 500px;
    margin: auto;
  }

  .search-input {
    border: none;
    outline: none;
    box-shadow: none;
    border-radius: 999px;
    padding: 0.6rem 1rem;
    flex: 1;
  }

  .btn {
    font-weight: 600;
    border-radius: 999px;
    padding: 0.4rem 1rem;
    transition: all 0.2s ease-in-out;
  }

  .login-btn {
    color: #333;
    border: 1px solid #ddd;
    background: #fff;
  }
  .login-btn:hover {
    background: #ff385c;
    color: #fff;
  }

  .btn-signup {
    background: #ff385c;
    color: #fff;
    border: none;
  }
  .btn-signup:hover {
    background: #e03150;
    transform: scale(1.05);
  }

  .logout-btn {
    color: #333;
    border: 1px solid #ddd;
    background: #fff;
  }
  .logout-btn:hover {
    background: #ff385c;
    color: #fff;
  }

  .btn-host-home {
    font-weight: 600;
    border-radius: 999px;
    padding: 0.4rem 1rem;
    background: #fff;
    border: 1px solid #ddd;
    color: #333;
    transition: all 0.2s ease-in-out;
    box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.05);
  }

  .btn-host-home:hover {
    background: #f7f7f7;
    border-color: #ccc;
  }

  .brand-icon {
    font-size: 1.6rem;
    display: flex;
    align-items: center;
    justify-content: center;
    text-decoration: none;
    transition: all 0.2s ease-in-out;
  }

  .brand-icon i {
    background: #fff;
    border-radius: 50%;
    padding: 0.4rem;
    box-shadow: 0 2px 6px rgba(0, 0, 0, 0.1);
  }

  .brand-icon:hover i {
    transform: scale(1.1);
  }

  .explore-link {
  font-weight: 600;
  color: #333;
  font-size: 1.1rem;
  padding: 0.4rem 1rem;
  border-radius: 999px;
  transition: all 0.2s ease-in-out;
}

.explore-link:hover {
  background: #f7f7f7;
  color: #ff385c;
  text-decoration: none;
}

</style>

<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand brand-icon" href="/listings">
      <i class="fa-regular fa-compass"></i>
    </a>

    <button
      class="navbar-toggler"
      type="button"
      data-bs-toggle="collapse"
      data-bs-target="#navbarNavAltMarkup"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-link explore-link" href="/listings">Explore</a>
      </div>

      <div class="navbar-nav ms-auto">
        <form class="d-flex" role="search">
          <div class="search-bar d-flex align-items-center">
            <input
              class="form-control search-input"
              type="search"
              placeholder="Search destinations"
              aria-label="Search"
            />
            <button class="btn btn-search ms-2" type="submit">
              <i class="fa-solid fa-magnifying-glass"></i> Search
            </button>
          </div>
        </form>
      </div>
      <div class="navbar-nav ms-auto">
        <a class="btn btn-host-home" href="/listings/new">Airbnb your home</a>

        <% if(!currentUser) { %>
        <a class="btn btn-outline-dark login-btn me-2" href="/login">Log in</a>
        <a class="btn btn-signup" href="/signup">Sign up</a>
        <% } %> <% if(currentUser) { %>
        <a class="btn btn-outline-dark logout-btn" href="/logout">Log out</a>
        <% } %>
      </div>
    </div>
  </div>
</nav>
