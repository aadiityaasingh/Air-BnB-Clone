<% layout("/layouts/boilerPlate") %>
<body>
  <h3>All listings</h3>
  <!-- <form method="get" action="/listings/new">
        <button>Create New Listing</button>
    </form> -->
  <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1">
    <% for(let listing of allListings) {%>
        <a href="/listings/<%= listing._id %>" class="listing-link"></a>
    <div class="card col">
      <img
        src="https://images.unsplash.com/photo-1501785888041-af3ef285b470?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxzZWFyY2h8MTh8fHRyYXZlbHxlbnwwfHwwfHx8MA%3D%3D&auto=format&fit=crop&w=800&q=60"
        class="card-img-top"
        alt="listing-image"
        style="height: 20rem;"
      />
      <div class="card-img-overlay">fdsfs</div>
      <div class="card-body">
        <p class="card-text">
          <%= listing.title %> <br />
          &#8377;<%= listing.price.toLocaleString("en-IN") %>
        </p>
      </div>
    </div>
    <%}%>
  </div>
</body>
