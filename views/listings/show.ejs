<% layout("/layouts/boilerPlate") %>
<style>
.row > .col-8.offset-2 {
  margin-top: 2rem;
  margin-bottom: 1rem;
  text-align: center;
}

.row > .col-8.offset-2 h3 {
  font-size: 2rem;
  font-weight: 700;
  color: #222;
}

.show-card {
  border: none;
  border-radius: 16px;
  overflow: hidden;
  box-shadow: 0 8px 20px rgba(0,0,0,0.08);
  margin-bottom: 2rem;
}

.show-img {
  width: 100%;
  height: 350px;
  object-fit: cover;
}

.card-body p {
  color: #333;
  line-height: 1.6;
  margin-bottom: 0.5rem;
}

.card-body b i {
  color: #ff385c; 
}

.d-flex.gap-2 a,
.d-flex.gap-2 button {
  border-radius: 50px;
  font-weight: 600;
  padding: 0.4rem 1.2rem;
  transition: all 0.2s ease-in-out;
}

.d-flex.gap-2 a.btn-warning:hover {
  transform: scale(1.05);
}

.d-flex.gap-2 button.btn-danger:hover {
  transform: scale(1.05);
}

.col-8.offset-3 h4 {
  font-weight: 600;
  color: #222;
  margin-bottom: 1rem;
}

.review-form textarea,
.review-form input,
.review-form select {
  border-radius: 12px;
  padding: 0.6rem;
  border: 1px solid #ddd;
}

.review-form button.btn-outline-dark {
  border-radius: 50px;
  padding: 0.5rem 1.5rem;
  font-weight: 600;
  margin-top: 0.5rem;
  transition: all 0.2s;
}

.review-form button.btn-outline-dark:hover {
  background-color: #ff385c;
  color: #fff;
  transform: scale(1.05);
}

.starability-slot label {
  cursor: pointer;
  font-size: 1.2rem;
}

.starability-result {
  color: #ff385c;
  font-weight: 600;
  margin-bottom: 0.5rem;
}

.row .card {
  border-radius: 16px;
  box-shadow: 0 6px 18px rgba(0,0,0,0.06);
  padding: 1rem;
  margin-bottom: 1.5rem;
  background: #fff;
}

.row .card h5 {
  font-weight: 600;
  color: #222;
}

.row .card .card-text {
  color: #555;
}

.row .card button {
  border-radius: 50px;
  font-size: 0.8rem;
  transition: 0.2s;
}

.row .card button:hover {
  transform: scale(1.05);
}

hr {
  border-top: 1px solid #eee;
  margin: 2rem 0;
}

</style>
<div class="row show-container">
  <div class="col-8 offset-2 text-center">
    <h3><%= listing.title %></h3>
  </div>

  <div class="card col-6 offset-3 show-card listing-card">
    <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
    <div class="card-body">
      <p class="card-text">
        <b><i><%= listing.owner.username %></i></b>
        <br>
        <%= listing.description %>
        <br>
        &#8377; <%= listing.price.toLocaleString("en-IN") %>
        <br>
        <%= listing.location %>
        <br>
        <%= listing.country %>
      </p>
    </div>
  </div>

  <% if (currentUser && listing.owner._id.equals(currentUser._id)) { %>
    <div class="d-flex gap-2 justify-content-center mt-3">
      <a href="/listings/<%= listing._id %>/edit" class="btn btn-warning btn-sm">
        ‚úèÔ∏è Edit
      </a>
      <form method="post" action="/listings/<%= listing._id %>?_method=DELETE" onsubmit="return confirm('Are you sure you want to delete this listing?');">
        <button type="submit" class="btn btn-danger btn-sm">
          üóëÔ∏è Delete
        </button>
      </form>
    </div>
  <% } %>

  <div class="col-8 offset-2 mb-3">
    <hr>

    <% if(currentUser) { %>
      <div class="review-form">
        <h4>Leave a Review</h4>
        <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
          <!-- Rating -->
          <div class="mb-3 mt-3">
            <label for="rating" class="form-label">Rating</label>
            <fieldset class="starability-slot">
              <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
              <input type="radio" id="first-rate1" name="review[rating]" value="1" />
              <label for="first-rate1" title="Terrible">1 star</label>
              <input type="radio" id="first-rate2" name="review[rating]" value="2" />
              <label for="first-rate2" title="Not good">2 stars</label>
              <input type="radio" id="first-rate3" name="review[rating]" value="3" />
              <label for="first-rate3" title="Average">3 stars</label>
              <input type="radio" id="first-rate4" name="review[rating]" value="4" />
              <label for="first-rate4" title="Very good">4 stars</label>
              <input type="radio" id="first-rate5" name="review[rating]" value="5" />
              <label for="first-rate5" title="Amazing">5 stars</label>
            </fieldset>
          </div>

          <div class="mb-3 mt-3">
            <label for="comment" class="form-label"><b>Comments</b></label>
            <textarea name="review[comment]" id="comment" cols="30" rows="5" class="form-control" required></textarea>
            <div class="invalid-feedback">Please submit some comments</div>
          </div>

          <button class="btn btn-outline-dark">Submit</button>
        </form>
      </div>
    <% } %>

    <% if(listing.reviews.length > 0) { %>
      <div class="reviews-section mt-4">
        <p><b>All Reviews</b></p>
        <div class="row">
          <% for(review of listing.reviews) { %>
            <div class="card col-5 ms-3 mb-3 review-card">
              <div class="card-body">
                <h5 class="card-title"><%= review.author.username %></h5>
                <p class="starability-result card-text" data-rating="<%= review.rating %>">
                  Rated: <%= review.rating %> stars
                </p>
                <p class="card-text"><%= review.comment %></p>
              </div>
              <form class="mb-3" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                <button class="btn btn-sm btn-dark">Delete</button>
              </form>
            </div>
          <% } %>
        </div>
      </div>
    <% } %>
  </div>
</div>

